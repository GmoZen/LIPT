<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/user_item_layout"
    android:layout_margin="15dp">

    <TextView
        android:id="@+id/user_icon_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/user_icon"
        app:layout_constraintStart_toStartOf="@id/user_icon"
        app:layout_constraintEnd_toEndOf="@id/user_icon"
        tools:text="Admin"
        android:textSize="16sp"
        android:gravity="center"
        />


    <ImageView
        android:id="@+id/user_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/user_icon_label"
        android:src="@drawable/baseline_account_circle_24"
        />

    <TextView
        android:id="@+id/username_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="User 1"
        app:layout_constraintStart_toEndOf="@id/user_icon"
        app:layout_constraintTop_toTopOf="@id/user_icon"
        app:layout_constraintBottom_toBottomOf="@id/user_icon"
        android:layout_marginLeft="24dp"
        android:textSize="25sp"
        />


    <Button
        android:id="@+id/user_delete_button"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Delete"
        app:layout_constraintTop_toBottomOf="@id/user_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/user_info_button"
        />

    <Button
        android:id="@+id/user_info_button"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Info"
        app:layout_constraintTop_toBottomOf="@id/user_icon"
        app:layout_constraintStart_toEndOf="@id/user_delete_button"
        app:layout_constraintEnd_toEndOf="parent"
        />















</androidx.constraintlayout.widget.ConstraintLayout>