<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".trainerRecordActivity">

    <ImageView
        android:id="@+id/trainerRecordBackgroundImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/trainer_record_background"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <ImageView
        android:id="@+id/trainerRecordTitleImage"
        android:layout_width="421dp"
        android:layout_height="116dp"
        android:layout_marginTop="55dp"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/trainer_record_title_image2" />


    <TableLayout
        android:id="@+id/player_Table"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/trainerRecordTitleImage"
        android:layout_marginTop="50dp"
        android:stretchColumns="1" >

        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Player Name"
                android:textSize="25sp"
                android:textColor="@color/white"
                android:padding="2dp"
                android:background="@drawable/table_border"/>
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="admin1lovesy"
                android:textSize="25sp"
                android:textColor="@color/white"
                android:padding="2dp"
                android:background="@drawable/table_border"/>

        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trainer Level"
                android:textSize="25sp"
                android:textColor="@color/white"
                android:padding="2dp"
                android:background="@drawable/table_border"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="42"
                android:textSize="25sp"
                android:textColor="@color/white"
                android:padding="2dp"
                android:background="@drawable/table_border"/>
        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rounds Played"
                android:textSize="25sp"
                android:textColor="@color/white"
                android:padding="2dp"
                android:background="@drawable/table_border"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="69"
                android:textSize="25sp"
                android:textColor="@color/white"
                android:padding="2dp"
                android:background="@drawable/table_border"/>
        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Accuracy"
                android:textSize="25sp"
                android:textColor="@color/white"
                android:padding="2dp"
                android:background="@drawable/table_border"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="77%"
                android:textSize="25sp"
                android:textColor="@color/white"
                android:padding="2dp"
                android:background="@drawable/table_border"/>
        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Prizes Earned"
                android:textSize="25sp"
                android:textColor="@color/white"
                android:padding="2dp"
                android:background="@drawable/table_border"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="19/20"
                android:textSize="25sp"
                android:textColor="@color/white"
                android:padding="2dp"
                android:background="@drawable/table_border"/>
        </TableRow>


    </TableLayout>


    <Button
        android:id="@+id/trainerRecordExitButton"
        android:layout_width="180dp"
        android:layout_height="55dp"
        android:layout_marginBottom="50dp"
        android:text="@string/return_to_menu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>