<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".registrationActivity">

    <ImageView
        android:id="@+id/registrationBackgroundImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/registration_background"
        tools:layout_editor_absoluteX="-39dp"
        tools:layout_editor_absoluteY="16dp" />

    <ImageView
        android:id="@+id/registrationTitleImage"
        android:layout_width="350dp"
        android:layout_height="191dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/registration_title_image"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/registrationRulesTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:text="@string/rules_for_creation"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/registrationRulesTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/registration_rules"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:layout_marginTop="5dp"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/registrationRulesTitleTextView"/>

    <EditText
        android:id="@+id/registrationUsernameTextEdit"
        android:layout_width="270dp"
        android:layout_height="65dp"
        android:ems="10"
        android:gravity="center"
        android:hint="@string/username_hint"
        android:inputType="textEmailAddress"
        android:textColorHint="@color/white"
        android:layout_marginTop="50dp"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/registrationRulesTextView"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/registrationPasswordTextEdit"
        android:layout_width="270dp"
        android:layout_height="65dp"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:gravity="center"
        android:hint="@string/password_hint"
        android:inputType="textPassword"
        android:textColorHint="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/registrationUsernameTextEdit"/>

    <Button
        android:id="@+id/registrationButton2"
        android:layout_width="250dp"
        android:layout_height="80dp"
        android:text="@string/register_new_account"
        android:textSize="24sp"
        android:layout_marginTop="30dp"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/registrationPasswordTextEdit"/>

    <Button
        android:id="@+id/registrationReturnButton"
        android:layout_width="248dp"
        android:layout_height="65dp"
        android:layout_marginBottom="50dp"
        android:text="@string/return_to_login"
        android:textSize="24sp"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>